{
  "name": "soundapp",
  "version": "1.1.1",
  "description": "SoundApp",
  "main": "js/app.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "dist": "electron-builder",
    "make": "electron-forge make"
  },
  "author": "David Renelt",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.6.1",
    "@electron-forge/maker-deb": "^7.6.1",
    "@electron-forge/maker-rpm": "^7.6.1",
    "@electron-forge/maker-squirrel": "^7.6.1",
    "@electron-forge/maker-zip": "^7.6.1",
    "electron": "^34.0.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "ignore": [
          "_Material",
          "_gsdata_",
          ".vscode",
          "build",
          "bin",
          "node_modules",
          "env.json"
        ],
        "extraResource": [
          "./bin",
          "./build/icons/"
        ],
        "executableName": "soundApp",
        "icon": "build/icons/app.ico"
      },
      "rebuildConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "soundApp",
            "setupExe": "soundApp_Setup.exe",
            "setupIcon": "build/icons/installer.ico",
            "loadingGif": "build/loader.gif",
            "iconUrl": "https://raum.com/update/soundapp/app.ico"
          }
        }
      ]
    }
  }
}
